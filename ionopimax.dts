/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";
	
	fragment@0 {
		target = <&i2c_arm>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";
			
			ionopimax: ionopimax@35 {
				compatible = "sferalabs,ionopimax";
				reg = <0x35>;
				status = "okay";
				pinctrl-names = "default";
				pinctrl-0 = <&ionopimax_di>;
			};
			
			atecc608a: atecc608a@60 {
				compatible = "sferalabs,atecc";
				reg = <0x60>;
				status = "okay";
			};
		};
	};
	
	fragment@1 {
		target = <&gpio>;
		__overlay__ {
			ionopimax_di: ionopimax_di {
				brcm,pins = <16 19 20 21>;
				brcm,function = <0>; /* in */
				brcm,pull = <0>; /* no pull */
			};
		};
	};
};
